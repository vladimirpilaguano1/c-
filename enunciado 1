#include <iostream>

using namespace std;

// Para el tamaño del arreglo
const int TAM = 5;

// Muestra los valores almacenados en un arreglo.
void mostrarArreglo(int arrg[], int tamn) {
    cout << "--- Valores almacenados " << endl;
    for (int i = 0; i < tamn; i++) {
        cout << "Elemento [" << i << "]: " << arrg[i] << endl;
    }
}

int main() {
    // Declaración de variables
    int vals[TAM]; // Arreglo para 5 números
    
    cout << "===== ENUNCIADO 1: VOID =====" << endl;
    
    // Ingreso de 5 números enteros
    for (int i = 0; i < TAM; i++) {
        cout << "Ingrese el número " << (i + 1) << ": ";
        cin >> vals[i];
    }
    
    // Llamada a la función void para mostrar el arreglo
    mostrarArreglo(vals, TAM);
    
    cout << "=============================" << endl;
    return 0;
}
